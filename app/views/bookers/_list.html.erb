<div class="card-list-container py-5">
  <% bookers.each do |bookers| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to bookers_path(bookers.id) do %>
      <%= image_tag bookers.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag bookers.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(bookers_path(bookers.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= bookers.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">opinion：<%= bookers.body %></p>
          <span><i class="fas fa-user"></i> By <%= bookers.user.name %> ｜ </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate post_images %>
</div>